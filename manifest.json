{
    "name": "novel-experience",
    "version": "2.2.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "exclude_matches": [
                "*://*.youtube.com/*",
                "*://*.crunchyroll.com/*"
            ],
            "js": [
                "content.js",
                "message-content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_title": "Reader",
        "default_popup": "popup.html"
    }
}