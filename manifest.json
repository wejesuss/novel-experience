{
    "name": "Read Helper",
    "version": "2.3.0",
    "manifest_version": 2,
    "description": "Help you read with keyboard shortcuts and auto-scroll",
    "icons": {
        "1024": "icon-1024.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "toggleEventListeners.js",
                "messageHandler.js",
                "getStorage.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_title": "Reader Helper",
        "default_popup": "popup.html",
        "default_icon": "icon-1024.png"
    }
}