{
    "name": "novel-experience",
    "version": "2.2.7",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "toggleEventListeners.js",
                "messageHandler.js",
                "getStorage.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_title": "Reader",
        "default_popup": "popup.html"
    }
}